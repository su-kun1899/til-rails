<h1>People#index</h1>
<p><%= @msg %></p>
<table>
  <tr>
    <th>Id</th>
    <th>Name</th>
    <th colspan="2"></th>
  </tr>
  <% @people.each do |person| %>
      <tr>
        <td><%= person.id %></td>
        <td><a href="/people/<%= person.id %>"><%= person.name %></a></td>
        <td><a href="/people/edit/<%= person.id %>">Edit</a></td>
        <td><a href="#" data-delete-link data-person-id="<%= person.id %>">Delete</a></td>
      </tr>
  <% end %>
</table>

<script type="text/javascript" charset="utf-8">
  $('a[data-delete-link]').on('click',function () {
    if(confirm('このデータを削除しますか？')){
      location.href = '/people/delete/' + $(this).attr('data-person-id');
    }

    return false;
  })
</script>